#include <thread>

#include <opencog/atomspace/AtomSpace.h>
#include <opencog/cogserver/atoms/CogServerNode.h>

using namespace opencog;

class MCPUTest :  public CxxTest::TestSuite
{
private:
	std::thread* main_loop;
	AtomSpacePtr asp;
	CogServerNodePtr csrv;

public:

	MCPUTest()
	{
		logger().set_level(Logger::DEBUG);
		//logger().set_print_to_stdout_flag(true);
	}

	~MCPUTest()
	{
		// erase the log file if no assertions failed
		if (!CxxTest::TestTracker::tracker().suiteFailed())
			std::remove(logger().get_filename().c_str());
	}

	void setUp()
	{
		asp = createAtomSpace();
		Handle hcsn = asp->add_node(COG_SERVER_NODE, "test-cogserver");
		csrv = CogServerNodeCast(hcsn);
		csrv->loadModules();
		csrv->enableMCPServer(17445);
		main_loop = new std::thread(&CogServer::serverLoop, csrv.get());

		// Wait for the cogserver to finish initializing.
		sleep(1);
	}

	void tearDown()
	{
		csrv->stop();
		main_loop->join();
		delete main_loop;
		csrv = nullptr;
		asp = nullptr;
	}

	// Try to run the example program. See if it works.
	void test_mcp_checker()
	{
		int rc;
		logger().debug("BEGIN TEST: %s", __FUNCTION__);

		rc = system(PROJECT_BINARY_DIR "/examples/mcp/mcp-checker --port 17445");
		if (rc != 0) printf("Error: cannot run mcp checker\n");
		TS_ASSERT_EQUALS(rc, 0);

		logger().debug("END TEST: %s", __FUNCTION__);
	}
};
